<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ziyuan.serve.post.repository.CommentMapper">
    <sql id="insertFields">
        username, user_id, to_post_id, content,comment_count, create_time
    </sql>

    <select id="selectAllComment" resultType="Comment">
        select * from comment
        where to_post_id = #{postId}
        order by create_time desc
    </select>

    <insert id="insertComment" parameterType="Comment">
        insert into comment (<include refid="insertFields"/>)
        values (#{username}, #{userId}, #{toPostId}, #{content}, #{commentCount}, #{createTime})
    </insert>
    <update id="updateComment" parameterType="int">
        update comment set comment_count = comment_count + 1
        where comment_id = #{commentId}
    </update>

</mapper>
