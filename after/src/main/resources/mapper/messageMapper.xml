<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ziyuan.serve.message.repository.MessageMapper">
    <sql id="insertFields">
        from_id, to_id, create_time, type, content
    </sql>

    <select id="findAllMessage" parameterType="int" resultType="Message">
        select * from message
        where (to_id = #{userId} or to_id = 0)
           and from_id = #{userId}
        order by create_time desc
    </select>

    <insert id="insertMessage" parameterType="Message">
        insert into message (<include refid="insertFields"/>)
        values (#{fromId}, #{toId}, #{createTime}, #{type}, #{content})
    </insert>

</mapper>
