<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ziyuan.serve.post.repository.ReplyMapper">
    <sql id="insertFields">
        username, user_id, to_reply_username,to_comment_id, to_post_id, content, create_time
    </sql>

    <select id="selectAllReply" resultType="Reply">
        select * from reply
        where to_post_id = #{postId}
    </select>

    <insert id="insertReply" parameterType="Reply">
        insert into reply (<include refid="insertFields"/>)
        values (#{username}, #{userId}, #{toReplyUsername}, #{toCommentId} , #{toPostId}, #{content}, #{createTime})
    </insert>

</mapper>
